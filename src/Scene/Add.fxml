<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="Controller.AddController"
          prefHeight="400.0" prefWidth="600.0"
          alignment="CENTER" hgap="10" vgap="10">
    <Text text="Add equipment" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
    <Text text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="comboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" prefHeight="20"/>
    <Text text="Is working:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <CheckBox fx:id="isFunctioning" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Text fx:id="minValueField" text="" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="minValue" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Text fx:id="maxValueField" text="" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="maxValue" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Button text="Add" GridPane.columnIndex="0" GridPane.rowIndex="5" onAction="#addEquipment"/>
    <Button text="Go back" GridPane.columnIndex="1" GridPane.rowIndex="5" onAction="#setSceneToClient"/>
</GridPane>
